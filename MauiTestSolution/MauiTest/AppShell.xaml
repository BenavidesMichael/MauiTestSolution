<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiTest.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:MauiTest.Views"
    FlyoutHeaderBehavior="CollapseOnScroll">

    <Shell.FlyoutHeader>
        <Grid HeightRequest="150">
            <Image Source="visual_studio_logo.png"
                    HeightRequest="50"
                    VerticalOptions="Center"
                    WidthRequest="50"
                    HorizontalOptions="Center" />
        </Grid>
    </Shell.FlyoutHeader>

    <ShellContent Title="HOME" ContentTemplate="{DataTemplate pages:MainPage}" Route="MainPage" />
    <ShellContent Title="TASKER" ContentTemplate="{DataTemplate pages:TaskerPage}" Route="TaskerPage" />


</Shell>
